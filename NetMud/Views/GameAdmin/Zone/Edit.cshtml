@model NetMud.Models.Admin.AddEditZoneDataViewModel
@{
    ViewBag.Title = "Edit Zone";
}

@{
    <section id="newZoneForm">
        @using (Html.BeginForm("EditZoneData", "GameAdmin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <input type="hidden" name="id" id="id" value="@Model.DataObject.ID" />
            @Html.EditorFor(e => e.Name)
            @Html.EditorFor(e => e.Claimable)
            @Html.EditorFor(e => e.TemperatureCoefficient)
            @Html.EditorFor(e => e.PressureCoefficient)
            @Html.EditorFor(e => e.BaseElevation)
            @Html.EditorFor(e => e.WorldName)
            @Html.EditorFor(e => e.NewHelpBody)

            <div class="form-group">
                <div class="col-md-offset-2 col-md-9">
                    <input type="submit" value="Commit" class="btn btn-default" style="color: green; border-color: cadetblue;" />
                    @Html.ActionLink("Cancel", "ManageZoneData", "GameAdmin", new { @class = "btn btn-default", @style = "color: orange; border-color: red;" })
                </div>
            </div>
        }
    </section>
}

<div>
    <p>
        <a id="TravelUp" name="TravelUp" style="color: green; padding: 5px; cursor: pointer;" title="up">A</a>&nbsp;
        <a id="TravelDown" name="TravelDown" style="color: red; padding: 5px; cursor: pointer;" title="Down">V</a>
    </p>
    <pre id="expandedModelContainer" class="asciiMap" data-id="@Model.DataObject.ID" data-zindex="0"></pre>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

    <script type="text/javascript">
        $(function () {
            GetMap();

            $('#TravelUp').click(function () {
                var $exModelContainer = $("#expandedModelContainer");
                var currentZ = parseInt($exModelContainer.attr('data-zIndex'));

                $exModelContainer.attr('data-zIndex', currentZ + 1);

                GetMap();
            });

            $('#TravelDown').click(function () {
                var $exModelContainer = $("#expandedModelContainer");
                var currentZ = parseInt($exModelContainer.attr('data-zIndex'));

                if (currentZ == 0)
                    return;

                $exModelContainer.attr('data-zIndex', currentZ - 1);

                GetMap();
            });
        });

        function GetMap() {
            var $exModelContainer = $("#expandedModelContainer");
            var dataId = $exModelContainer.attr("data-id");
            var zIndex = $exModelContainer.attr("data-zindex");

            $.get("/api/AdminDataApi/RenderZoneMap/" + dataId + '/' + zIndex, function (data) {
                $exModelContainer.html(data);
            });
        };
    </script>
}