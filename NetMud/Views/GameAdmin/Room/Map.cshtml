@model NetMud.Models.Admin.RoomMapViewModel
@{
    ViewBag.Title = "Room Mapper";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>

<div>
    <pre id="expandedModelContainer" class="asciiMap" data-id="@Model.Here.ID"></pre>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

    <script type="text/javascript">
        $(function () {
            var $exModelContainer = $("#expandedModelContainer");
            var dataId = $exModelContainer.attr("data-id");

            $.get("/api/ClientDataApi/RenderRoomForEditWithRadius/" + dataId + '/5', function (data) {
                $exModelContainer.html(data);
            });
        });
    </script>
}